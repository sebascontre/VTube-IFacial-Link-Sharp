<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VTube_IFacial_Link.LabelledValueSlider" x:Name="root">
    <VerticalStackLayout BindingContext="{x:Reference root}">
        <Grid>
            <Label Text="{Binding Text}" HorizontalOptions="Start"/>
            <Label Text="{Binding Value, StringFormat='{0:F2}'}" HorizontalOptions="End"/>
        </Grid>
        <Slider Value="{Binding Value}" Minimum="{Binding Minimum}" Maximum="{Binding Maximum}"/>
    </VerticalStackLayout>
</ContentView>
